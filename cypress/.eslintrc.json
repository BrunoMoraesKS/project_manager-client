{
  "plugins": ["cypress"],
  "extends": ["plugin:cypress/recommended"],
  "env": {
    "cypress/globals": true
  },
  "rules": {
    "@typescript-eslint/triple-slash-reference": "off",
    "cypress/no-unnecessary-waiting": "off"
  },

  "parserOptions": {
    "project": ["cypress/tsconfig.json"]
  }
}
